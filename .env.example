APP_NAME="AI Web Design Workbench"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_TIMEZONE=UTC
APP_URL=http://ai-web-design-workbench.test

# AI Content Generation (Anthropic Claude)
# Toggle the AI content features and configure the Claude provider.
# API key can be set here or securely via the Admin > AI Settings page (DB takes precedence).
AI_CONTENT_GENERATION_ENABLED=false
AI_PROVIDER=anthropic
# Claude API key: required when AI is enabled.
ANTHROPIC_API_KEY=
# Model and generation defaults 
# YOU WILL NEED TO UPDATE THESE VALUES BASED ON YOUR CLAUDE SUBSCRIPTION AND MODEL AVAILABILITY
ANTHROPIC_MODEL=claude-sonnet-4-20250514
ANTHROPIC_MAX_TOKENS=4096
ANTHROPIC_TEMPERATURE=0.7
# Rate limiting and logging
AI_RATE_LIMIT_ENABLED=true
AI_MAX_REQUESTS_PER_HOUR=60
AI_MAX_REQUESTS_PER_DAY=200
AI_LOGGING_ENABLED=true

# Generation Defaults
DEFAULT_STYLE_LEVEL=full
DEFAULT_PAGE_TYPE=landing-page

# Cache
CACHE_STORE=file
CACHE_PREFIX=

# Session
SESSION_DRIVER=file
SESSION_LIFETIME=120

LOG_CHANNEL=stack
LOG_LEVEL=debug
